<Page x:Class="QuanLyTiecCuoi.MVVM.View.DSSanhView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyTiecCuoi.MVVM.View"
      xmlns:vm="clr-namespace:QuanLyTiecCuoi.MVVM.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Danh Sách Sảnh Tiệc">

    <Page.DataContext>
        <vm:SanhViewModel />
    </Page.DataContext>

    <Grid Margin="20">
        <!-- Tiêu đề -->
        <TextBlock Text="Danh Sách Sảnh Tiệc" FontSize="20" FontWeight="Bold" Margin="10" />

        <!-- DataGrid để hiển thị danh sách sảnh -->
        <DataGrid ItemsSource="{Binding DanhSachSanh}" 
                  AutoGenerateColumns="False" 
                  Margin="10,50,10,10" 
                  HorizontalAlignment="Stretch" 
                  VerticalAlignment="Stretch">

            <DataGrid.Columns>
                <!-- Cột STT -->
                <DataGridTextColumn Header="STT" 
                                    Width="50" 
                                    IsReadOnly="True" 
                                    Binding="{Binding MaSanh}" />
                <!-- Cột Tên Sảnh -->
                <DataGridTextColumn Header="Tên Sảnh" 
                                    Width="*"
                                    Binding="{Binding TenSanh}" />
                <!-- Cột Loại Sảnh -->
                <DataGridTextColumn Header="Loại Sảnh" 
                                    Width="*"
                                    Binding="{Binding LoaiSanh.TenLoaiSanh}" />
                <!-- Cột Số Lượng Bàn Tối Đa -->
                <DataGridTextColumn Header="Số Lượng Bàn Tối Đa" 
                                    Width="*"
                                    Binding="{Binding SoLuongBanToiDa}" />
                <!-- Cột Đơn Giá Bàn Tối Thiểu -->
                <DataGridTextColumn Header="Đơn Giá Bàn Tối Thiểu" 
                                    Width="*"
                                    Binding="{Binding LoaiSanh.DonGiaBanToiThieu, StringFormat=C0}" />
                <!-- Cột Ghi Chú -->
                <DataGridTextColumn Header="Ghi Chú" 
                                    Width="*"
                                    Binding="{Binding GhiChu}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Nút Thêm mới sảnh -->
        <Button Content="Thêm Sảnh" 
                Command="{Binding AddSanhCommand}" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Right" 
                Margin="10" />
    </Grid>
</Page>
