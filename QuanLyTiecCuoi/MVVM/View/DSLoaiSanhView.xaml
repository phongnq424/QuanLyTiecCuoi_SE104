<Page x:Class="QuanLyTiecCuoi.MVVM.View.DSLoaiSanhView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyTiecCuoi.MVVM.View"
      xmlns:vm="clr-namespace:QuanLyTiecCuoi.MVVM.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1600"
      Title="DSLoaiSanhView">

    <Page.DataContext>
        <vm:LoaiSanhViewModel />
    </Page.DataContext>

    <Border BorderBrush="Black" BorderThickness="3" CornerRadius="40" Margin="20">
        <Grid Margin="20">
            <!-- Tiêu đề -->
            <TextBlock Text="Danh Sách Loại Sảnh" FontSize="40" FontFamily="Cambria" FontWeight="Bold" Margin="10" />

            <!-- DataGrid để hiển thị danh sách sảnh -->
            <DataGrid ItemsSource="{Binding DanhSachLoaiSanh}"
                      SelectedItem="{Binding SelectedLoaiSanh, Mode=TwoWay}"
                      AutoGenerateColumns="False" 
                      Margin="10,70,10,70" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"
                      FontSize="20" FontFamily="Cambria">

                <DataGrid.Columns>
                    <!-- Cột STT -->
                    <DataGridTextColumn Header="STT"
                                    Width="200" 
                                    IsReadOnly="True" 
                                    Binding="{Binding MaLoaiSanh}" />
                    <!-- Cột Loại Sảnh -->
                    <DataGridTextColumn Header="Tên Loại Sảnh" 
                                    Width="*"
                                    Binding="{Binding TenLoaiSanh}" />
                    <!-- Cột Đơn Giá Bàn Tối Thiểu -->
                    <DataGridTextColumn Header="Đơn Giá Bàn Tối Thiểu" 
                                    Width="*"
                                    Binding="{Binding DonGiaBanToiThieu, StringFormat=N0}" />
                </DataGrid.Columns>
            </DataGrid>

            <Grid Margin="10" VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Nút Quay Lại -->
                <Button Grid.Column="0" Content="Quay lại" Height="40" Width="200" FontSize="20" FontFamily="Cambria" HorizontalAlignment="Left"
                    Click="btnQuayLai_Click" Style="{StaticResource ButtonStyle}" Margin="10,0,0,0" />

                <!-- Nút Thêm Loại Sảnh -->
                <Button Grid.Column="1" Content="Thêm Loại Sảnh" Height="40" Width="220" FontSize="20" FontFamily="Cambria" HorizontalAlignment="Right"
                    Command="{Binding AddLoaiSanhCommand}" Style="{StaticResource ButtonStyle}" Margin="10,0,10,0" />

                <!-- Nút Sửa Sảnh -->
                <Button Grid.Column="2" Content="Sửa Loại Sảnh" Height="40" Width="220" FontSize="20" FontFamily="Cambria" HorizontalAlignment="Right"
                    Command="{Binding EditLoaiSanhCommand}" Style="{StaticResource ButtonStyle}" Margin="10,0,10,0" />

                <!-- Nút Xóa Sảnh -->
                <Button Grid.Column="3" Content="Xóa Loại Sảnh" Height="40" Width="220" FontSize="20" FontFamily="Cambria" HorizontalAlignment="Right"
                    Command="{Binding DeleteLoaiSanhCommand}" Style="{StaticResource ButtonStyle}" Margin="10,0,10,0" />
            </Grid>
        </Grid>
    </Border>
    
</Page>
