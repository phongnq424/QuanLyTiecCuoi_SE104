<Page x:Class="QuanLyTiecCuoi.MVVM.View.SanhView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyTiecCuoi.Services"
      xmlns:vm="clr-namespace:QuanLyTiecCuoi.MVVM.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1600"
      Title="Quản lý Sảnh Tiệc">

    <Page.Resources>
        <local:ImagePathConverter x:Key="ImagePathConverter"/>
    </Page.Resources>

    <Border BorderBrush="Black" BorderThickness="3" CornerRadius="40" Margin="20">
        <Grid Margin="20">
            <StackPanel>
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Tiêu đề -->
                    <TextBlock Text="Serenité Wedding - Trang Chủ" 
                    FontSize="40" FontFamily="Cambria" FontWeight="Bold" VerticalAlignment="Center" Grid.Column="0"/>

                    <!-- Nút Chi Tiết Loại Sảnh -->
                    <Button Content="Chi tiết Loại Sảnh" Style="{StaticResource ButtonStyle}" Width="220" Height="40" FontSize="16" Margin="0,0,30,0" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" 
                            Click="btnCTLoaiSanh_Click"/>

                    <!-- Nút Chi Tiết Sảnh -->
                    <Button Content="Chi tiết Sảnh" Style="{StaticResource ButtonStyle}" Width="180" Height="40" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="2" 
                            Click="btnCTSanh_Click"/>
                </Grid>

                <!-- Bộ lọc loại sảnh, ngày, ca -->
                <Grid Margin="0,20,0,20" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <!-- Cột cho "Chọn loại sảnh" và Combobox -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Cột cho "Chọn ngày" và DatePicker -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Cột cho "Chọn ca" và ComboBox -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Cột cho "Tổng số Sảnh" và số lượng sảnh -->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Chọn Loại Sảnh -->
                    <StackPanel Orientation="Horizontal" Margin="30,0,0,0" Grid.Column="0" >
                        <TextBlock Text="Loại Sảnh: " Margin="0,0,5,0" VerticalAlignment="Center" FontSize="20" FontFamily="Cambria"/>
                        <ComboBox Width="200" Margin="0,0,10,0" FontSize="20" FontFamily="Cambria">
                            <ComboBoxItem Content="Trưa"/>
                            <ComboBoxItem Content="Tối"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Chọn ngày -->
                    <StackPanel Orientation="Horizontal" Margin="50,0,0,0" Grid.Column="1" >
                        <TextBlock Text="Ngày: " Margin="0,0,5,0" VerticalAlignment="Center" FontSize="20" FontFamily="Cambria"/>
                        <DatePicker Width="250" Margin="0,0,10,0" FontSize="20" FontFamily="Cambria"/>
                    </StackPanel>
                
                    <!-- Chọn ca -->
                    <StackPanel Orientation="Horizontal" Margin="30,0,0,0" Grid.Column="2" >
                        <TextBlock Text="Ca làm: " Margin="0,0,5,0" VerticalAlignment="Center" FontSize="20" FontFamily="Cambria"/>
                        <ComboBox Width="200" Margin="0,0,10,0" FontSize="20" FontFamily="Cambria">
                            <ComboBoxItem Content="Trưa"/>
                            <ComboBoxItem Content="Tối"/>
                        </ComboBox>
                    </StackPanel>
                
                    <!-- Hiển thị tổng số Sảnh-->
                    <StackPanel Orientation="Horizontal" Margin="30,0,0,0" Grid.Column="3" HorizontalAlignment="Right">
                        <TextBlock Text="Tổng số Sảnh:" Margin="0,0,5,0" FontWeight="Bold" VerticalAlignment="Center" FontSize="20"/>
                        <TextBlock Text="{Binding SoLuongSanh}" Margin="0,0,0,0" FontWeight="Bold" VerticalAlignment="Center" FontSize="20"/>
                    </StackPanel>
                </Grid>


                <!-- Danh sách sảnh hiển thị bằng hình ảnh -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="700" Margin="0,20,0,0">
                    <ItemsControl ItemsSource="{Binding DanhSachSanh}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" 
                                        Margin="10" Background="White">
                                    <Grid Margin="15" >
                                        <!-- Cấu trúc hàng -->
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="220"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Cấu trúc 2 cột: Hình ảnh và Thông tin -->
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="380"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Cột 1: Hình ảnh sảnh -->
                                        <Rectangle RadiusX="20" RadiusY="20" Fill="Gray" Margin="5"/>
                                        <Rectangle RadiusX="19" RadiusY="19" Margin="7" >
                                            <Rectangle.Fill>
                                                <ImageBrush ImageSource="{Binding HinhAnh, Converter={StaticResource ImagePathConverter}}" Stretch="UniformToFill"/>
                                            </Rectangle.Fill>
                                        </Rectangle>

                                        <!-- Cột 2: Thông tin sảnh -->
                                        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10" VerticalAlignment="Center" >
                                            <!-- Tên sảnh -->
                                            <TextBlock Text="{Binding TenSanh}" FontWeight="Bold" Margin="0,0,0,10" FontSize="20" FontFamily="Cambria" />

                                            <!-- Loại sảnh -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="Loại Sảnh:" FontWeight="Bold" Margin="0,0,5,0" FontSize="18" FontFamily="Cambria"/>
                                                <TextBlock Text="{Binding LoaiSanh.TenLoaiSanh}" Margin="0,0,0,5" FontSize="18" FontFamily="Cambria"/>
                                            </StackPanel>

                                            <!-- Số lượng bàn tối đa -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5" >
                                                <TextBlock Text="Số Lượng Bàn Tối Đa:" FontWeight="Bold" Margin="0,0,5,0" FontSize="18" FontFamily="Cambria"/>
                                                <TextBlock Text="{Binding SoLuongBanToiDa}" Margin="0,0,0,5" FontSize="18" FontFamily="Cambria"/>
                                            </StackPanel>

                                            <!-- Đơn giá bàn tối thiểu -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="Đơn Giá Bàn Tối Thiểu:" FontWeight="Bold" Margin="0,0,5,0" FontSize="18" FontFamily="Cambria"/>
                                                <TextBlock Text="{Binding LoaiSanh.DonGiaBanToiThieu, StringFormat=N0}" Margin="0,0,0,5" FontSize="18" FontFamily="Cambria"/>
                                            </StackPanel>
                                        
                                            <!-- Ghi chú -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="Ghi Chú:" FontWeight="Bold" Margin="0,0,5,0" FontSize="18" FontFamily="Cambria"/>
                                                <TextBlock Text="{Binding GhiChu}" Margin="0,0,0,5" FontSize="18" FontFamily="Cambria"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Grid>
    </Border>
</Page>
