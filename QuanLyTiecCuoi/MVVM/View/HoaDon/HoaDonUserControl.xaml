             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyTiecCuoi.MVVM.View.HoaDon"
             xmlns:controlBar="clr-namespace:QuanLyTiecCuoi.MVVM.View.ControlBar"
             mc:Ignorable="d" 
             x:Name="TraCuuHoaDon"
             Padding="40"
             Background="White"
             d:DesignHeight="1080" d:DesignWidth="1670">
    <Border
        BorderBrush="#673500"
        BorderThickness="3"
        CornerRadius="40"
        Background="#ffffee">
        <Grid>
            <controlBar:ControlBarUserControl
                Margin="40,40,40,0"
                VerticalAlignment="Top"
                HorizontalAlignment="Right" 
                Height="auto" Width="auto"/>
            <TextBlock 
                Text="Serenité Wedding"
                Style="{StaticResource Header1Style}"/>
        </Grid>
    </Border>
</UserControl>
