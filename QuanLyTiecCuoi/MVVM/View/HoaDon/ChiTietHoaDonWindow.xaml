<Window x:Class="QuanLyTiecCuoi.MVVM.View.HoaDon.ChiTietHoaDonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:QuanLyTiecCuoi.MVVM.View.HoaDon"
        xmlns:controlBar="clr-namespace:QuanLyTiecCuoi.MVVM.View.ControlBar"
        mc:Ignorable="d"
        DataContext="{StaticResource HoaDonViewModel}"
        Background="Transparent"
        Title="ChiTietHoaDonWindow" 
        Height="900" Width="1000">
    <Border
        BorderThickness="2"
        BorderBrush="Black"
        CornerRadius="60"
        Background="White">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Border 
                Grid.Row="0"
                Height="80"
                CornerRadius="60,60,0,0"
                BorderThickness="0,0,0,2"
                BorderBrush="Black"
                Background="#D9D9D9">
                <Grid>
                    <controlBar:ControlBarUserControl
                        Width="auto"  
                        Margin="30,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"/>
                    <TextBlock 
                        Text="Chi tiết hóa đơn"
                        Style="{StaticResource Header2Style}"></TextBlock>
                </Grid>
            </Border>
            <Border
                Grid.Row="1"
                Margin="30,20,30,10"
                Padding="10"
                CornerRadius="30"
                BorderBrush="Black"
                BorderThickness="1"
                Height="auto" Width="auto">
                <Grid Height="auto">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Mã hóa đơn:" Style="{StaticResource Header3Style}"/>
                            <TextBlock Text="{Binding MaHoaDon}" Style="{StaticResource Header4Style}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Mã đặt tiêc:" Style="{StaticResource Header3Style}"/>
                            <TextBlock Text="{Binding MaDatTiec}" Style="{StaticResource Header4Style}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Số lượng bàn:" Style="{StaticResource Header3Style}"/>
                            <TextBlock Text="{Binding DATTIEC.SoLuongBan}" Style="{StaticResource Header4Style}"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel 
                        Grid.Column="1"
                        Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Tên cô dâu:" Style="{StaticResource Header3Style}"/>
                            <TextBox DataContext="{Binding DATTIEC.TenCoDau}" Style="{DynamicResource TextBoxDescribeStyle}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Tên chú rể:" Style="{StaticResource Header3Style}"/>
                            <TextBox DataContext="{Binding DATTIEC.TenChuRe}" Style="{DynamicResource TextBoxDescribeStyle}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Tiền đặt cọc:" Style="{StaticResource Header3Style}"/>
                            <TextBlock Text="{Binding DATTIEC.TienDatCoc}" Style="{StaticResource Header4Style}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
                
            </Border>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.8*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Grid.Row="0">
                    <Border
                        Margin="30,10,0,10"
                        CornerRadius="30"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Height="auto" Width="auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock
                                Margin="15,10"
                                Text="Menu"
                                Style="{StaticResource Header3Style}"></TextBlock>

                            <StackPanel 
                                Margin="10"
                                Grid.Row="2" 
                                HorizontalAlignment="Right">
                                <StackPanel
                                    Orientation="Horizontal">
                                    <TextBlock
                                        Margin="5"
                                        Text="Đơn giá bàn:"
                                        Style="{StaticResource Header3Style}"/>
                                    <TextBlock Text="{Binding DonGiaBan}" Style="{StaticResource Header4Style}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="5"
                                        Text="Tổng tiền bàn:"
                                        Style="{StaticResource Header3Style}"/>
                                    <TextBlock Text="{Binding TongTienBan}" Style="{StaticResource Header4Style}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.Column="1" Grid.Row="0">
                    <Border
                        Grid.Row="0"
                        Margin="30,10,30,10"
                        CornerRadius="30"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Height="auto" Width="auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock
                                VerticalAlignment="Center"
                                Margin="15,10"
                                Text="Dịch vụ"
                                Style="{StaticResource Header3Style}"/>
                            <Button
                                Style="{StaticResource ButtonStyle}"
                                HorizontalAlignment="Right"
                                Margin="5"
                                Content="Thêm dịch vụ"/>

                            <ListView
                                Grid.Row="1">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn 
                                            Width="auto" Header="STT" 
                                            HeaderContainerStyle="{StaticResource GridViewTableHeaderStyle}">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock
                                                        Style="{StaticResource Header6Style}"
                                                        Text="{Binding MaCTDV, StringFormat='0000'}" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn 
                                            Width="100"
                                            Header="Mã DV"
                                            HeaderContainerStyle="{StaticResource GridViewTableHeaderStyle}">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock
                                                        Style="{StaticResource Header6Style}"
                                                        Text="{Binding MaDichVu, StringFormat='0000'}" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn 
                                            Width="140"
                                            Header="Tên dịch vụ"
                                            HeaderContainerStyle="{StaticResource GridViewTableHeaderStyle}">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock
                                                        Style="{StaticResource Header6Style}"
                                                        Text="{Binding DichVu.TenDichVu}" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn 
                                            Width="150" Header="Đơn giá"
                                            HeaderContainerStyle="{StaticResource GridViewTableHeaderStyle}">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock
                                                        Style="{StaticResource Header6Style}"
                                                        Text="{Binding DonGia}" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        
                                        <GridViewColumn 
                                            Width="130" Header="Số lượng"
                                            HeaderContainerStyle="{StaticResource GridViewTableHeaderStyle}">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <xctk:IntegerUpDown
                                                        Value="{Binding SoLuong}"
                                                        Name="myUpDownControl" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn 
                                            Width="140" Header="Thành tiền" 
                                            HeaderContainerStyle="{StaticResource GridViewTableHeaderStyle}" >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock
                                                        Style="{StaticResource Header6Style}"
                                                        Text="{Binding }" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn 
                                            Width="40" >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button 
                                                        Margin="-15,0,0,0" 
                                                        Style="{StaticResource ButtonStyleDeleteBillInfor}"
                                                        Command="{Binding DataContext.DeleteBillInfoCommand,RelativeSource={RelativeSource AncestorType=ListView}}"
                                                        CommandParameter="{Binding}"></Button>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <Grid 
                                Margin="10"
                                Grid.Row="2"
                                HorizontalAlignment="Right">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="5"
                                        Text="Tổng tiền dịch vụ:"
                                        Style="{StaticResource Header3Style}"/>
                                    <TextBlock Text="{Binding TongTienDV}" Style="{StaticResource Header4Style}"/>
                                </StackPanel>

                            </Grid>
                        </Grid>
                    </Border>
                </Grid>

                <StackPanel
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Margin="30,0"
                    Grid.Row="1" Grid.Column="0">
                    
                    <TextBlock 
                        Text="Tổng tiền hóa đơn: "
                        Style="{StaticResource Header3Style}"/>
                    <TextBlock
                        Text="{Binding TongTienHD}"
                        Style="{StaticResource Header4Style}"/>
                </StackPanel>

                <StackPanel
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Margin="30,0"
                    Grid.Row="1" Grid.Column="1">

                    <TextBlock 
                        Text="Tiền phải thanh toán: "
                        Style="{StaticResource Header3Style}"/>
                    <TextBlock
                        Text="{Binding TienPhaiThanhToan}"
                        Style="{StaticResource Header4Style}"/>
                </StackPanel>


            </Grid>
            <Button 
                Grid.Row="3" 
                Margin="30,0"
                HorizontalAlignment="Left"
                Content="Lưu thay đổi"
                Command="{Binding LuuThayDoiCommand}"
                Style="{StaticResource ButtonStyle}"/>

            <StackPanel Grid.Row="3" HorizontalAlignment="Right" 
                        Margin="30,0"
                        Orientation="Horizontal">
                
            <Button 
                Grid.Row="3" 
                Content="Xác nhận thanh toán"
                Command="{Binding ThanhToanCommand}"
                Style="{StaticResource ButtonStyle}"/>

            <Button 
                Grid.Row="3" 
                Content="In hóa đơn"
                Command="{Binding InHoaDonCommand}"
                Style="{StaticResource ButtonStyle}"/>


            </StackPanel>
        </Grid>
    </Border>
</Window>
