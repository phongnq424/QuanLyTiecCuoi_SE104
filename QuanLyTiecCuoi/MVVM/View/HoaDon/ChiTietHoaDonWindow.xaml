<Window x:Class="QuanLyTiecCuoi.MVVM.View.HoaDon.ChiTietHoaDonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyTiecCuoi.MVVM.View.HoaDon"
        xmlns:controlBar="clr-namespace:QuanLyTiecCuoi.MVVM.View.ControlBar"
        mc:Ignorable="d"
        Background="Transparent"
        Title="ChiTietHoaDonWindow" 
        Height="1000" Width="1600">
    <Border
        BorderThickness="2"
        BorderBrush="Black"
        CornerRadius="60"
        Background="White">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Border 
                Grid.Row="0"
                Height="100"
                CornerRadius="60,60,0,0"
                BorderThickness="0,0,0,2"
                BorderBrush="Black"
                Background="#D9D9D9">
                <Grid>
                    <controlBar:ControlBarUserControl
                        Width="auto" 
                        VerticalAlignment="Top" 
                        Margin="30"
                        HorizontalAlignment="Right"/>
                    <TextBlock 
                        Text="Chi tiết hóa đơn"
                        Style="{StaticResource Header2Style}"></TextBlock>
                </Grid>
            </Border>
            <Border
                Grid.Row="1"
                Margin="50,20"
                Padding="10"
                CornerRadius="30"
                BorderBrush="Black"
                BorderThickness="1"
                Height="auto" Width="auto">
                <Grid Height="auto">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Mã hóa đơn:" Style="{StaticResource Header3Style}"/>
                            <TextBlock Text="{Binding MaHoaDon}" Style="{StaticResource Header4Style}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Mã đặt tiêc:" Style="{StaticResource Header3Style}"/>
                            <TextBlock Text="{Binding MaDatTiec}" Style="{StaticResource Header4Style}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Số lượng bàn:" Style="{StaticResource Header3Style}"/>
                            <TextBlock Text="{Binding SoLuongBan}" Style="{StaticResource Header4Style}"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel 
                        Grid.Column="1"
                        Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Tên cô dâu:" Style="{StaticResource Header3Style}"/>
                            <TextBox DataContext="{Binding TenCoDau}" Style="{DynamicResource TextBoxDescribeStyle}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Tên chú rể:" Style="{StaticResource Header3Style}"/>
                            <TextBox DataContext="{Binding TenChuRe}" Style="{DynamicResource TextBoxDescribeStyle}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Tiền đặt cọc:" Style="{StaticResource Header3Style}"/>
                            <TextBlock Text="{Binding SoLuongBan}" Style="{StaticResource Header4Style}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
                
            </Border>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Grid.Row="0">
                    <Border
                        Grid.Row="0"
                        Margin="50,10,0,10"
                        CornerRadius="30"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Height="auto" Width="auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock
                                Text="Menu"
                                Style="{StaticResource Header3Style}"></TextBlock>

                            <StackPanel 
                                Margin="10"
                                Grid.Row="2" 
                                HorizontalAlignment="Right">
                                <StackPanel
                                    Orientation="Horizontal">
                                    <TextBlock
                                        Margin="5"
                                        Text="Đơn giá bàn:"
                                        Style="{StaticResource Header3Style}"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock
                                        Margin="5"
                                        Text="Tổng tiền bàn:"
                                        Style="{StaticResource Header3Style}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                        
                        
                    </Border>
                </Grid>

                <Grid Grid.Column="1" Grid.Row="0">
                    <Border
                        Grid.Row="0"
                        Margin="30,10,50,10"
                        CornerRadius="30"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Height="auto" Width="auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock
                                Text="Dịch vụ"
                                Style="{StaticResource Header3Style}"></TextBlock>

                            <Grid 
                                Margin="10"
                                Grid.Row="2"
                                HorizontalAlignment="Right">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="5"
                                        Text="Đơn giá bàn:"
                                        Style="{StaticResource Header3Style}"/>
                                </StackPanel>

                            </Grid>
                        </Grid>
                    </Border>
                </Grid>

                <StackPanel
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Margin="30,0"
                    Grid.Row="1" Grid.Column="0">
                    
                    <TextBlock 
                        Text="Tổng tiền hóa đơn: "
                        Style="{StaticResource Header3Style}"/>
                    <TextBlock
                        Text="{Binding TongTienHoaDon}"
                        Style="{StaticResource Header4Style}"/>
                </StackPanel>

                <TextBlock 
                    VerticalAlignment="Center"
                    Margin="30,0"
                    Grid.Row="1" Grid.Column="1"
                    Text="{Binding}"
                    Style="{StaticResource Header3Style}"/>


            </Grid>
            <Button 
                Grid.Row="3" 
                HorizontalAlignment="Left"
                Margin="70,0"
                Content="Lưu thay đổi"
                Style="{StaticResource ButtonStyle}"/>

            <StackPanel Grid.Row="3" HorizontalAlignment="Right" Orientation="Horizontal">
                
            <Button 
                Grid.Row="3" 
                Margin="0,0,70,0"
                Content="Xác nhận thanh toán"
                Style="{StaticResource ButtonStyle}"/>

            <Button 
                Grid.Row="3" 
                Margin="0,0,70,0"
                Content="In hóa đơn"
                Style="{StaticResource ButtonStyle}"
                        Click="Button_Click" />


            </StackPanel>
        </Grid>
    </Border>
</Window>
