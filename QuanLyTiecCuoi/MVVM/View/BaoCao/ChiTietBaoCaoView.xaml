<Page x:Class="QuanLyTiecCuoi.MVVM.View.BaoCao.ChiTietBaoCaoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:QuanLyTiecCuoi.MVVM.View.BaoCao"
      xmlns:controlBar="clr-namespace:QuanLyTiecCuoi.MVVM.View.ControlBar"
      mc:Ignorable="d"
      d:DesignHeight="800"
      d:DesignWidth="1400"
      Background="Transparent">

    <Page.Resources>
        <Style TargetType="DataGrid">
            <Setter Property="FontSize"
                    Value="23" />
            <Setter Property="FontFamily"
                    Value="Cambria" />
        </Style>
    </Page.Resources>

    <Border CornerRadius="20"
            BorderBrush="Black"
            BorderThickness="2"
            Margin="15"
            Background="White"
            SnapsToDevicePixels="True">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.25*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Tiêu đề -->
            <TextBlock Text="Chi tiết báo cáo"
                       FontWeight="Bold"
                       Grid.Row="0"
                       Grid.Column="0"
                       Grid.ColumnSpan="4"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="20,10,0,5"
                       Style="{StaticResource Header2Style}" />
            <controlBar:ControlBarUserControl Grid.Row="0"
                                              Grid.Column="1"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Right" 
                                              Margin="0,0,12,0"/>
            <Border Grid.Row="1"
                    Grid.ColumnSpan="4"
                    BorderBrush="Black"
                    BorderThickness="1"
                    VerticalAlignment="Bottom" />

            <!-- Bộ lọc tháng năm -->
            <Grid Grid.Row="2"
                  Grid.ColumnSpan="2"
                  Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="0,0,10,0">
                    <TextBlock Text="Tháng:"
                               VerticalAlignment="Center"
                               Style="{StaticResource Header3Style}" />
                    <ComboBox Margin="20,5,5,5"
                              Width="300"
                              Style="{StaticResource RoundedComboBoxStyle}"
                              VerticalContentAlignment="Center"
                              ItemsSource="{Binding ThangList}"
                              SelectedItem="{Binding SelectedThang}" />
                </StackPanel>

                <!-- StackPanel cho Năm -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="10,0,0,0">
                    <TextBlock Text="Năm:"
                               VerticalAlignment="Center"
                               Style="{StaticResource Header3Style}" />
                    <ComboBox Margin="20,5,5,5"
                              Width="300"
                              Style="{StaticResource RoundedComboBoxStyle}"
                              VerticalContentAlignment="Center"
                              ItemsSource="{Binding NamList}"
                              SelectedItem="{Binding SelectedNam}" />
                </StackPanel>
            </Grid>

            <!-- Nội dung chính -->
            <Border Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Margin="10"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="10"
                    Background="#F0F0F0"
                    Padding="15">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- Phần tổng kết -->
                        <RowDefinition Height="*" />
                        <!-- Phần DataGrid có scroll -->
                    </Grid.RowDefinitions>

                    <!-- Tổng kết -->
                    <Grid Grid.Row="0"
                          Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal">
                            <TextBlock Text="Tổng doanh thu:"
                                       FontSize="25"
                                       Style="{StaticResource Header4Style}" />
                            <TextBlock Text="{Binding TongDoanhThuFormatted}"
                                       Margin="10"
                                       VerticalAlignment="Center"
                                       FontSize="25"
                                       Style="{StaticResource Header4Style}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal">
                            <TextBlock Text="Tổng tiệc cưới:"
                                       FontSize="25"
                                       Style="{StaticResource Header4Style}" />
                            <TextBlock Text="{Binding TongTiecCuoi}"
                                       Margin="10"
                                       VerticalAlignment="Center"
                                       FontSize="25"
                                       Style="{StaticResource Header4Style}" />
                        </StackPanel>
                    </Grid>

                    <!-- Scroll + DataGrid -->
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto">
                        <DataGrid AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  HeadersVisibility="Column"
                                  IsReadOnly="True"
                                  ItemsSource="{Binding ChiTietBaoCaoList}"
                                  MinHeight="200"
                                  Margin="0,0,0,10">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="STT"
                                                    Binding="{Binding STT}"
                                                    Width="0.1*" />
                                <DataGridTextColumn Header="Ngày"
                                                    Binding="{Binding NgayBaoCao, StringFormat='dd/MM/yyyy'}"
                                                    Width="0.18*" />
                                <DataGridTextColumn Header="Số lượng tiệc cưới"
                                                    Binding="{Binding SoLuongTiecCuoi}"
                                                    Width="0.2*" />
                                <DataGridTextColumn Header="Doanh thu"
                                                    Binding="{Binding DoanhThuFormatted}"
                                                    Width="0.2*" />
                                <DataGridTextColumn Header="Tỉ lệ doanh thu"
                                                    Binding="{Binding TiLeDoanhThu}"
                                                    Width="0.16*" />
                                <DataGridTextColumn Header="Tỉ lệ tiệc cưới"
                                                    Binding="{Binding TiLeTiecCuoi}"
                                                    Width="0.16*" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Nút quay lại -->
            <Button Grid.Row="4"
                    Grid.Column="1"
                    Width="200"
                    Height="50"
                    Content="Quay lại"
                    FontSize="30"
                    FontFamily="Cambria"
                    FontWeight="Bold"
                    Background="LightGray"
                    HorizontalAlignment="Center"
                    Margin="0,5,0,10"
                    Command="{Binding ReturnCommand}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </Grid>
    </Border>
</Page>
