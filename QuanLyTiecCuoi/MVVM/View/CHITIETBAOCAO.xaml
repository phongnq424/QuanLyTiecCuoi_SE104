<Page x:Class="QuanLyTiecCuoi.MVVM.View.BAOCAO"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyTiecCuoi.MVVM.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BAOCAO"
      Background="#FFFFEE">

    <Grid Margin="10">
        <!-- Định nghĩa cột: Label (Auto), Control (*), Label (Auto), Control (*) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- Định nghĩa hàng: Tiêu đề (Auto), ComboBox (Auto), Tổng (Auto), DataGrid (*), Button (Auto) -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="Chi tiết báo cáo"
                   FontSize="18"
                   FontWeight="Bold"
                   Grid.Row="0"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10" />

        <!-- ComboBox cho Tháng và Năm -->
        <Label Content="Tháng:"
               Grid.Row="1"
               Grid.Column="0"
               VerticalAlignment="Center" />
        <ComboBox Grid.Row="1"
                  Grid.Column="1"
                  Margin="5"
                  HorizontalAlignment="Stretch">
            <!-- Dữ liệu mẫu 1–12 -->
            <ComboBoxItem Content="1" />
            <ComboBoxItem Content="2" />
            <ComboBoxItem Content="3" />
            <ComboBoxItem Content="4" />
            <ComboBoxItem Content="5" />
            <ComboBoxItem Content="6" />
            <ComboBoxItem Content="7" />
            <ComboBoxItem Content="8" />
            <ComboBoxItem Content="9" />
            <ComboBoxItem Content="10" />
            <ComboBoxItem Content="11" />
            <ComboBoxItem Content="12" />
        </ComboBox>
        <Label Content="Năm:"
               Grid.Row="1"
               Grid.Column="2"
               VerticalAlignment="Center"
               Margin="10,0,0,0" />
        <ComboBox Grid.Row="1"
                  Grid.Column="3"
                  Margin="5"
                  HorizontalAlignment="Stretch">
            <!-- Dữ liệu mẫu 2023–2025 -->
            <ComboBoxItem Content="2023" />
            <ComboBoxItem Content="2024" />
            <ComboBoxItem Content="2025" />
        </ComboBox>

        <!-- TextBox hiển thị Tổng doanh thu và Tổng tiệc cưới -->
        <Label Content="Tổng doanh thu:"
               Grid.Row="2"
               Grid.Column="0"
               VerticalAlignment="Center"
               Margin="0,10,0,0" />
        <TextBox Grid.Row="2"
                 Grid.Column="1"
                 Margin="5,10,5,0"
                 IsReadOnly="True"
                 Text="0" />
        <Label Content="Tổng tiệc cưới:"
               Grid.Row="2"
               Grid.Column="2"
               VerticalAlignment="Center"
               Margin="10,10,0,0" />
        <TextBox Grid.Row="2"
                 Grid.Column="3"
                 Margin="5,10,0,0"
                 IsReadOnly="True"
                 Text="0" />

        <!-- DataGrid báo cáo chi tiết -->
        <DataGrid Grid.Row="3"
                  Grid.Column="0"
                  Grid.ColumnSpan="4"
                  Margin="0,10,0,10"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="STT"
                                    Binding="{Binding STT}"
                                    Width="Auto" />
                <DataGridTextColumn Header="Ngày"
                                    Binding="{Binding Ngay}"
                                    Width="*" />
                <DataGridTextColumn Header="Số lượng tiệc cưới"
                                    Binding="{Binding SoLuongTiecCuoi}"
                                    Width="*" />
                <DataGridTextColumn Header="Doanh thu"
                                    Binding="{Binding DoanhThu}"
                                    Width="*" />
                <DataGridTextColumn Header="Tỉ lệ doanh thu"
                                    Binding="{Binding TiLeDoanhThu}"
                                    Width="*" />
                <DataGridTextColumn Header="Tỉ lệ tiệc cưới"
                                    Binding="{Binding TiLeTiecCuoi}"
                                    Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Nút OK -->
        <Button Content="OK"
                Grid.Row="4"
                Grid.Column="3"
                HorizontalAlignment="Right"
                Margin="0,10,0,0" />
    </Grid>
</Page>
