<Page x:Class="QuanLyTiecCuoi.MVVM.View.TuyChinh.CaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyTiecCuoi.MVVM.View.TuyChinh"
      mc:Ignorable="d"
      d:DesignHeight="796"
      d:DesignWidth="1600"
      Background="#ffffee"
      Title="CaPage">

    <Grid>
        <Border BorderBrush="Black"
                BorderThickness="3"
                CornerRadius="40"
                Margin="20">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Tiêu đề -->
                <TextBlock Text="Danh sách ca sảnh"
                           FontSize="40"
                           FontFamily="Cambria"
                           FontWeight="Bold"
                           Margin="10"
                           Grid.Row="0" />

                <Grid Margin="10,10,10,10"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <!-- Cột cho "Giới thiệu" -->
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />

                        <ColumnDefinition Width="*" />

                   
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="🔎"
                               Margin="0,0,5,0"
                               VerticalAlignment="Center"
                               FontSize="20"
                               FontFamily="Cambria"
                               Grid.Column="0" />

                    <!-- Tên Sảnh -->
                    <StackPanel Orientation="Horizontal"
                                Margin="10,0,0,0"
                                Grid.Column="1">
                        <TextBlock Text="Tên Ca: "
                                   Margin="0,0,5,0"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   FontFamily="Cambria" />
                        <Border Width="200" Height="30" Margin="0,0,10,0" CornerRadius="10" BorderBrush="Gray" BorderThickness="1" Background="White">
                            <TextBox FontSize="20" FontFamily="Cambria" Background="Transparent" BorderThickness="0" Padding="5,0" VerticalAlignment="Center"
                                Text="{Binding FilterTenSanh, UpdateSourceTrigger=PropertyChanged}"/>
                        </Border>
                    </StackPanel>

                    <!-- Giờ bắt đầu và kết thúc -->
                    <StackPanel Orientation="Horizontal"
                                Margin="10,0,0,5"
                                Grid.Column="2">
                        <TextBlock Text="Giờ bắt đầu: "
                                   Margin="0,0,5,0"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   FontFamily="Cambria" />
                        <Border Width="200" Height="30" Margin="0,0,10,0" CornerRadius="10" BorderBrush="Gray" BorderThickness="1" Background="White">
                            <TextBox FontSize="20" FontFamily="Cambria" Background="Transparent" BorderThickness="0" Padding="5,0" VerticalAlignment="Center"
                                Text="{Binding FilterGioBatDau, UpdateSourceTrigger=PropertyChanged}"/>
                        </Border>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="10,0,0,5"
                                Grid.Column="3">
                        <TextBlock Text="Giờ kết thúc: "
                                   Margin="0,0,5,0"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   FontFamily="Cambria" />
                        <Border Width="200" Height="30" Margin="0,0,10,0" CornerRadius="10" BorderBrush="Gray" BorderThickness="1" Background="White">
                            <TextBox FontSize="20" FontFamily="Cambria" Background="Transparent" BorderThickness="0" Padding="5,0" VerticalAlignment="Center"
                                Text="{Binding FilterGioKetThuc, UpdateSourceTrigger=PropertyChanged}"/>
                        </Border>
                    </StackPanel>



                </Grid>

                <!-- DataGrid để hiển thị danh sách sảnh -->
                <DataGrid ItemsSource="{Binding DanhSachSanh}"
                          SelectedItem="{Binding SelectedSanh, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          AlternationCount="1000"
                          IsReadOnly="True"
                          Margin="10,10,10,10"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Grid.Row="2"
                          FontSize="20"
                          FontFamily="Cambria">

                    <DataGrid.Columns>
                        <!-- Cột STT (Mã Ca) -->
                        <DataGridTemplateColumn Header="STT"
                                                Width="100"
                                                IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=AlternationIndex, Converter={StaticResource STTConverter}}"
                                               HorizontalAlignment="Center" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                        <!-- Cột Tên Ca -->
                        <DataGridTextColumn Header="Tên Ca"
                                            Width="*"
                                            Binding="{Binding TenCa}" />

                        <!-- Cột Giờ Bắt Đầu -->
                        <DataGridTextColumn Header="Giờ Bắt Đầu"
                                            Width="*"
                                            Binding="{Binding GioBatDau, StringFormat='{}{0:HH\\:mm}'}" />


                        <!-- Cột Giờ Kết Thúc -->
                        <DataGridTextColumn Header="Giờ Kết Thúc"
                                            Width="*"
                                            Binding="{Binding GioKetThuc,StringFormat='{}{0:HH\\:mm}'}" />
                    </DataGrid.Columns>

                </DataGrid>

                <Grid Margin="10"
                      VerticalAlignment="Bottom"
                      Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*" />
                        <ColumnDefinition Width="0.25*" />
                        <ColumnDefinition Width="0.25*" />
                        <ColumnDefinition Width="0.25*" />
                    </Grid.ColumnDefinitions>

                    <!-- Nút Quay Lại -->

                    <!-- Nút Thêm Sảnh -->
                    <Button Grid.Column="1"
                            Content="Thêm ca"
                            Height="40"
                            Width="200"
                            FontSize="20"
                            FontFamily="Cambria"
                            HorizontalAlignment="Right"
                            Command="{Binding AddCaCommand}"
                            Style="{StaticResource ButtonStyle}"
                            Margin="10,0,10,0" />

                    <!-- Nút Sửa Sảnh -->
                    <Button Grid.Column="2"
                            Content="Sửa ca"
                            Height="40"
                            Width="200"
                            FontSize="20"
                            FontFamily="Cambria"
                            HorizontalAlignment="Right"
                            Command="{Binding UpdateCaCommand}"
                            Style="{StaticResource ButtonStyle}"
                            Margin="10,0,10,0" />

                    <!-- Nút Xóa Sảnh -->
                    <Button Grid.Column="3"
                            Content="Xóa ca"
                            Height="40"
                            Width="200"
                            FontSize="20"
                            FontFamily="Cambria"
                            HorizontalAlignment="Right"
                            Command="{Binding DeleteCaCommand}"
                            Style="{StaticResource ButtonStyle}"
                            Margin="10,0,10,0" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
