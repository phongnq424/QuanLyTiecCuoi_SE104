<Window x:Class="QuanLyTiecCuoi.MVVM.View.TuyChinh.AutoCloseMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyTiecCuoi.MVVM.View.TuyChinh"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        Topmost="True"
        ShowInTaskbar="False"
        Background="White"
        Title="Thông báo">
    <Border Padding="20" BorderBrush="Gray" BorderThickness="1" CornerRadius="8">
        <TextBlock x:Name="MessageText"
                   Text="Đang xử lý, vui lòng đợi..."
                   FontSize="14"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   Width="250" />
    </Border>
</Window>
