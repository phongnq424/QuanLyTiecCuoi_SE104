<Page x:Class="QuanLyTiecCuoi.MVVM.View.DatTiec"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyTiecCuoi.MVVM.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DatTiec">

    <Grid Margin="100,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="3*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Margin="0,0,0,0"
              Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock 
                Text="Serenité Wedding" 
                FontSize="30" 
                FontStyle="Italic" 
                FontWeight="SemiBold" 
                Margin="0 0 20 0"
                Grid.Row="0"/>
            <Grid Margin="0,0,0,0"
                  Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel 
                Orientation="Horizontal" 
                HorizontalAlignment="Center"
                Margin="20 0 0 10"
                Grid.Row="1">
                    <ComboBox 
                    Width="200" 
                    Height="40" 
                    Margin="0 10 30 10">
                        <ComboBoxItem Content="Món 1" />
                    </ComboBox>
                    <TextBox
                    TextAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontStyle="Italic" 
                    FontSize="18" 
                    Margin="0 10 20 10"
                    Width="200"
                    BorderThickness="1"
                    GotFocus="TextBox_GotFocus"
                    LostFocus="TextBox_LostFocus" TextChanged="TextBox_TextChanged"/>
                </StackPanel>
            </Grid>
        </Grid>

        <Border 
            Background="#F8F4EF" 
            CornerRadius="10" 
            Padding="15" 
            BorderBrush="Gray" 
            BorderThickness="1"
            Margin="0,0,0,0"
            Width="690"
            HorizontalAlignment="Center" 
            Grid.Row="2">
            <ListView 
                ItemsSource="{Binding DanhSachDatTiec}" 
                Grid.RowSpan="2"
                HorizontalAlignment="Center" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Cô dâu" Width="60" DisplayMemberBinding="{Binding TenCoDau}" />
                        <GridViewColumn Header="Chú rể" Width="60" DisplayMemberBinding="{Binding TenChuRe}" />
                        <GridViewColumn Header="SĐT" Width="70" DisplayMemberBinding="{Binding SDT}" />
                        <GridViewColumn Header="Đặt cọc" Width="70" DisplayMemberBinding="{Binding TienDatCoc}" />
                        <GridViewColumn Header="Ca" Width="80" DisplayMemberBinding="{Binding MaCa}" />
                        <GridViewColumn Header="Sảnh" Width="60" DisplayMemberBinding="{Binding MaSanh}" />
                        <GridViewColumn Header="Ngày đãi" Width="80" DisplayMemberBinding="{Binding NgayDatTiec}" />
                        <GridViewColumn Header="Số bàn" Width="60" DisplayMemberBinding="{Binding SoLuongBan}" />
                        <GridViewColumn Header="Số bàn dự trữ" Width="80" DisplayMemberBinding="{Binding SoBanDuTru}" />
                        <GridViewColumn Header="  " Width="80" DisplayMemberBinding="{Binding Icon}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
        <StackPanel Orientation="Horizontal" 
            HorizontalAlignment="Right" 
            Margin="0,10,10,0" 
            Grid.Row="3">
            <Button Content="Thêm tiệc cưới" Width="100" Height="30" Margin="0 10 20 10" Click="Add_Click"/>
            <Button Content="In hóa đơn" Width="100" Height="30" Margin="0 10 20 10" Click="InHoaDon_Click"/>
        </StackPanel>
    </Grid>
</Page>
