<Page x:Class="QuanLyTiecCuoi.MVVM.View.ThemTiec"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      Background="White"
      Title="ThemTiec">

    <!-- Viewbox giúp co giãn toàn bộ giao diện theo kích thước khung -->
    <Viewbox Stretch="Uniform">
        <Grid Width="1600" Height="1000">
            <Border BorderBrush="Black" BorderThickness="3" CornerRadius="40" Margin="20">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header (Không thay đổi) -->
                    <Grid Grid.Row="0" Margin="0 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock 
                        Text="Serenité Wedding" 
                        FontSize="60" 
                        FontFamily="Cambria"
                        FontWeight="SemiBold" 
                        VerticalAlignment="Center"
                        Margin="20 0"
                        Grid.Column="0"/>

                        <Button 
                        Command="{Binding LuuCommand}"
                        Content="Đặt tiệc" 
                        FontSize="24"
                        Padding="20 5"
                        Margin="0 0 40 0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Grid.Column="2"/>
                    </Grid>

                    <!-- Content -->
                    <Border Grid.Row="1" BorderBrush="Black" BorderThickness="3" CornerRadius="40" Margin="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Title -->
                            <TextBlock 
                            Text="Biểu mẫu 2. Đặt Tiệc Cưới" 
                            FontSize="36" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="Cambria"
                            FontWeight="SemiBold"
                            Margin="0 10"/>

                            <!-- Main Form -->
                            <Grid Grid.Row="1" Margin="0 10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="0.5*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Left Form -->
                                <StackPanel Grid.Column="0" Margin="10">
                                    <StackPanel.Resources>
                                        <Style TargetType="TextBox">
                                            <Setter Property="FontSize" Value="30"/>
                                            <Setter Property="Margin" Value="10 5"/>
                                            <Setter Property="FontFamily" Value="Cambria"/>
                                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                        </Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontSize" Value="32"/>
                                            <Setter Property="Margin" Value="10 5"/>
                                            <Setter Property="FontFamily" Value="Cambria"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                        </Style>
                                    </StackPanel.Resources>

                                    <TextBlock Text="Cô dâu"/>
                                    <TextBox Text="{Binding TiecMoi.TenCoDau}" />

                                    <TextBlock Text="Chú rể"/>
                                    <TextBox Text="{Binding TiecMoi.TenChuRe}" />

                                    <TextBlock Text="Số điện thoại"/>
                                    <TextBox Text="{Binding TiecMoi.SDT}"/>

                                    <TextBlock Text="Tiền đặt cọc"/>
                                    <TextBox Text="{Binding TiecMoi.TienDatCoc}"/>

                                    <TextBlock Text="Số lượng bàn"/>
                                    <TextBox Text="{Binding TiecMoi.SoLuongBan}" />

                                    <TextBlock Text="Số bàn dự trữ"/>
                                    <TextBox Text="{Binding TiecMoi.SoBanDuTru}"/>
                                </StackPanel>

                                <!-- Right Form -->
                                <StackPanel Grid.Column="2" Margin="10">
                                    <StackPanel.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontSize" Value="32"/>
                                            <Setter Property="Margin" Value="0 5"/>
                                            <Setter Property="FontFamily" Value="Cambria"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                        </Style>
                                    </StackPanel.Resources>

                                    <!-- Ngày đãi tiệc -->
                                    <TextBlock Text="Ngày đãi tiệc"/>
                                    <StackPanel Orientation="Horizontal" Margin="0 5">
                                        <Button x:Name="CalendarButton" Click="CalendarButton_Click" Width="50" Height="50" Content="📅"/>
                                        <Grid x:Name="CalendarOverlay" Background="#80000000" Visibility="Collapsed" >
                                            <Border Width="Auto" Height="Auto" Background="White" Padding="10" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Calendar Name="MyCalendar" FontSize="30" SelectedDatesChanged="MyCalendar_SelectedDatesChanged" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                            </Border>
                                        </Grid>

                                        <TextBlock x:Name="SelectedDateText" Margin="10 0" VerticalAlignment="Center" FontSize="20"/>
                                    </StackPanel>

                                    <!-- Ca -->
                                    <TextBlock Text="Ca"/>
                                    <StackPanel Orientation="Horizontal" Margin="0 5">
                                        <Button x:Name="ShiftButton" Click="ShiftButton_Click" Width="50" Height="50" Content="⌚"/>
                                        <Popup x:Name="ShiftPopup" PlacementTarget="{Binding ElementName=ShiftButton}" Placement="Bottom" StaysOpen="False">
                                            <Border BorderBrush="Gray" BorderThickness="1" Background="White">
                                                <ComboBox Name="ShiftComboBox" Width="260" Height="40" FontSize="20" SelectionChanged="ShiftComboBox_SelectionChanged"/>
                                            </Border>
                                        </Popup>
                                        <TextBlock x:Name="SelectedShiftText" Margin="10 0" VerticalAlignment="Center" FontSize="20"/>
                                    </StackPanel>

                                    <!-- Sảnh -->
                                    <TextBlock Text="Sảnh"/>
                                    <StackPanel Orientation="Horizontal" Margin="0 5">
                                        <Button x:Name="HallButton" Click="HallButton_Click" Width="50" Height="50" Content="🏛"/>
                                        <Popup x:Name="HallPopup" PlacementTarget="{Binding ElementName=HallButton}" Placement="Bottom" StaysOpen="False">
                                            <Border BorderBrush="Gray" BorderThickness="1" Background="White">
                                                <ComboBox x:Name="HallComboBox" Width="260" Height="40" FontSize="20" SelectionChanged="HallComboBox_SelectionChanged"/>
                                            </Border>
                                        </Popup>
                                        <TextBlock x:Name="SelectedHallText" Margin="10 0" VerticalAlignment="Center" FontSize="20"/>
                                    </StackPanel>

                                    <!-- Món ăn -->
                                    <TextBlock Text="Món ăn"/>
                                    <Button x:Name="MonAnButton" Width="50" Height="50" Click="MonAnButton_Click" Content="🍽" Margin="0 5" HorizontalAlignment="Left"/>

                                    <!-- Dịch vụ -->
                                    <TextBlock Text="Dịch vụ"/>
                                    <Button x:Name="DichVuButton" Width="50" Height="50" Click="DichVuButton_Click" Content="💒" Margin="0 5" HorizontalAlignment="Left"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

        </Grid>
    </Viewbox>
</Page>
