<Page x:Class="QuanLyTiecCuoi.MVVM.View.ThemTiec"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyTiecCuoi.MVVM.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ThemTiec">

    <Grid
        Margin="100 0 0 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock 
                    Text="Serenité Wedding" 
                    FontSize="30" 
                    FontStyle="Italic" 
                    FontWeight="SemiBold" 
                    Margin="30 10 20 10"
                    Grid.Row="0"/>
            <Button 
                    Command="{Binding LuuCommand}"
                    Content="Đặt tiệc" 
                    Width="100" 
                    Height="30" 
                    Margin="0 0 10 0" 
                    HorizontalAlignment="Right"
                    Grid.Column="1"/>
        </Grid>

        <Border Background="#F8F4EF" 
            CornerRadius="10" 
            Padding="15" 
            BorderBrush="Gray" 
            BorderThickness="1"
            Margin="0 0 10 30"
            Width="690"
            Grid.Row="2">

            <Grid 
                Margin="0 0 0 0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock 
                    Text="Biểu mẫu 2. Đặt Tiệc Cưới" 
                    FontSize="24" 
                    HorizontalAlignment="Center"
                    FontWeight="SemiBold" 
                    Margin="0 0 0 0"
                    Grid.Row="0"/>
                <Grid 
                    Margin="0 0 0 0"
                    Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid Margin="0 20 20 0" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <!-- Cột tiêu đề -->
                            <ColumnDefinition Width="*"/>
                            <!-- Cột nhập liệu -->
                        </Grid.ColumnDefinitions>

                        <!-- Cô dâu -->
                        <TextBlock 
                            Grid.Row="0" Grid.Column="0"
                            Text="Cô dâu" 
                            FontSize="16" 
                            FontWeight="SemiBold" 
                            VerticalAlignment="Center"
                            Margin="10 5 0 10"/>
                        <TextBox
                            Grid.Row="0" Grid.Column="1"
                            Text="{Binding TiecMoi.TenCoDau, UpdateSourceTrigger=PropertyChanged}"
                            Width="200"
                            TextAlignment="Center"
                            VerticalAlignment="Center" 
                            FontSize="18" 
                            Margin="20 5 0 10"
                            BorderThickness="1"/>
                        <!-- Chú rể -->
                        <TextBlock 
                            Grid.Row="1" Grid.Column="0"
                            Text="Chú rể" 
                            FontSize="16" 
                            FontWeight="SemiBold" 
                            VerticalAlignment="Center"
                            Margin="10 5 0 10"/>
                        <TextBox
                            Grid.Row="1" Grid.Column="1"
                            Text="{Binding TiecMoi.TenChuRe, UpdateSourceTrigger=PropertyChanged}"
                            Width="200"
                            TextAlignment="Center"
                            VerticalAlignment="Center" 
                            FontSize="18" 
                            Margin="20 5 0 10"
                            BorderThickness="1"/>

                        <!-- Số điện thoại -->
                        <TextBlock 
                            Grid.Row="2" Grid.Column="0"
                            Text="Số điện thoại" 
                            FontSize="16" 
                            FontWeight="SemiBold" 
                            VerticalAlignment="Center"
                            Margin="10 5 0 10"/>
                        <TextBox
                            Grid.Row="2" Grid.Column="1"
                            Text="{Binding TiecMoi.SDT, UpdateSourceTrigger=PropertyChanged}"
                            Width="200"
                            TextAlignment="Center"
                            VerticalAlignment="Center" 
                            FontSize="18" 
                            Margin="20 5 0 10"
                            BorderThickness="1"/>

                        <!-- Tiền đặt cọc -->
                        <TextBlock 
                            Grid.Row="3" Grid.Column="0"
                            Text="Tiền đặt cọc" 
                            FontSize="16" 
                            FontWeight="SemiBold" 
                            VerticalAlignment="Center"
                            Margin="10 5 0 10"/>
                        <TextBox
                            Grid.Row="3" Grid.Column="1"
                            Text="{Binding TiecMoi.TienDatCoc, UpdateSourceTrigger=PropertyChanged}"
                            Width="200"
                            TextAlignment="Center"
                            VerticalAlignment="Center" 
                            FontSize="18" 
                            Margin="20 5 0 10"
                            BorderThickness="1"/>

                        <!-- Số lượng bàn -->
                        <TextBlock 
                            Grid.Row="4" Grid.Column="0"
                            Text="Số lượng bàn" 
                            FontSize="16" 
                            FontWeight="SemiBold" 
                            VerticalAlignment="Center"
                            Margin="10 5 0 10"/>
                        <TextBox
                            Grid.Row="4" Grid.Column="1"
                            Text="{Binding TiecMoi.SoLuongBan, UpdateSourceTrigger=PropertyChanged}"
                            Width="200"
                            TextAlignment="Center"
                            VerticalAlignment="Center" 
                            FontSize="18" 
                            Margin="20 5 0 10"
                            BorderThickness="1"/>

                        <!-- Số bàn dự trữ -->
                        <TextBlock 
                            Grid.Row="5" Grid.Column="0"
                            Text="Số bàn dự trữ" 
                            FontSize="16" 
                            FontWeight="SemiBold" 
                            VerticalAlignment="Center"
                            Margin="10 5 0 10"/>
                        <TextBox
                            Grid.Row="5" Grid.Column="1"
                            Text="{Binding TiecMoi.SoBanDuTru, UpdateSourceTrigger=PropertyChanged}"
                            Width="200"
                            TextAlignment="Center"
                            VerticalAlignment="Center" 
                            FontSize="18" 
                            Margin="20 5 0 10"
                            BorderThickness="1"/>
                    </Grid>



                    <Grid Margin="0 20 0 0" Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <!-- Cột tiêu đề -->
                            <ColumnDefinition Width="*"/>
                            <!-- Cột nội dung -->
                        </Grid.ColumnDefinitions>

                        <!-- Ngày đãi tiệc -->
                        <TextBlock 
                            Grid.Row="0" Grid.Column="0"
                            Text="Ngày đãi tiệc" 
                            FontSize="16" 
                            FontWeight="SemiBold" 
                            VerticalAlignment="Center"
                            Margin="10 5 0 10"/>
                        <StackPanel 
                            Grid.Row="0" 
                            Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                            <Button 
                                x:Name="CalendarButton" 
                                Click="CalendarButton_Click" 
                                Width="30" Height="30"/>
                            <Popup 
                               x:Name="CalendarPopup" 
                               PlacementTarget="{Binding ElementName=CalendarButton}" 
                               Placement="Bottom" 
                               StaysOpen="False">
                                <Border BorderBrush="Gray" BorderThickness="1" Background="White">
                                    <Calendar Name="MyCalendar" SelectedDatesChanged="MyCalendar_SelectedDateChanged"/>
                                </Border>
                            </Popup>
                            <TextBlock 
                               x:Name="SelectedDateText"
                               VerticalAlignment="Center"
                               Margin="10 0 0 0"
                               FontSize="14"
                               Foreground="DarkBlue"/>
                        </StackPanel>

                        <!-- Ca -->
                        <TextBlock 
                            Grid.Row="1" Grid.Column="0"
                            Text="Ca" 
                            FontSize="16" 
                            FontWeight="SemiBold" 
                            VerticalAlignment="Center"
                            Margin="10 5 0 10"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button x:Name="ShiftButton" Click="ShiftButton_Click" Width="30" Height="30" Margin="0 5 0 0">
                                <Image/>
                            </Button>
                            <Popup x:Name="ShiftPopup" 
                               PlacementTarget="{Binding ElementName=ShiftButton}" 
                               Placement="Bottom" 
                               StaysOpen="False">
                                <Border BorderBrush="Gray" BorderThickness="1" Background="White">
                                    <ComboBox Name="ShiftComboBox" Width="200" SelectionChanged="ShiftComboBox_SelectionChanged"/>
                                </Border>
                            </Popup>
                            <TextBlock 
                               x:Name="SelectedShiftText" 
                               VerticalAlignment="Center" 
                               FontSize="14" 
                               Margin="10 5 0 0"
                               Foreground="DarkGreen"/>
                        </StackPanel>

                        <!-- Sảnh -->
                        <TextBlock 
                            Grid.Row="2" Grid.Column="0"
                            Text="Sảnh" 
                            FontSize="16" 
                            FontWeight="SemiBold" 
                            VerticalAlignment="Center"
                            Margin="10 5 0 10"/>
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button x:Name="HallButton" Click="HallButton_Click" Width="30" Height="30">
                                <!-- <Image Source="dropdown_icon.png"/> -->
                            </Button>
                            <Popup 
                                x:Name="HallPopup" 
                                PlacementTarget="{Binding ElementName=HallButton}" 
                                Placement="Bottom" 
                                StaysOpen="False">
                                <Border BorderBrush="Gray" BorderThickness="1" Background="White">
                                    <ComboBox x:Name ="HallComboBox" Width="200" SelectionChanged="HallComboBox_SelectionChanged"/>
                                </Border>
                            </Popup>
                            <TextBlock x:Name="SelectedHallText" 
                           VerticalAlignment="Center" 
                           FontSize="14" 
                           Margin="10 5 0 0"
                           Foreground="DarkGreen"/>
                        </StackPanel>

                        <!-- Món ăn -->
                        <TextBlock 
                            Grid.Row="3" Grid.Column="0"
                            Text="Món ăn" 
                            FontSize="16" 
                            FontWeight="SemiBold" 
                            VerticalAlignment="Center"
                            Margin="10 5 0 10"/>
                        <Button Grid.Row="3"
                            x:Name="MonAnButton"
                            Width="30" Height="30"
                            Margin="0,1,98,5"
                            Click="MonAnButton_Click" RenderTransformOrigin="-1.464,0.491" Grid.Column="1">
                            <!-- <Image Name="MonAnButtonIcon" Source="add_icon.png" />-->
                        </Button>

                        <!-- Dịch vụ -->
                        <TextBlock 
                            Grid.Row="4" Grid.Column="0"
                            Text="Dịch vụ" 
                            FontSize="16" 
                            FontWeight="SemiBold" 
                            VerticalAlignment="Center"
                            Margin="10 5 0 10"/>
                        <Button Grid.Row="4" Grid.Column="1"
                            x:Name="DichVuButton"
                            Width="30" Height="30"
                            Margin="0,3,98,3"
                            Click="DichVuButton_Click">
                            <!-- <Image Name="DichVuButtonIcon" Source="add_icon.png" />-->
                        </Button>
                    </Grid>
                </Grid>
            </Grid>

        </Border>

    </Grid>
</Page>
