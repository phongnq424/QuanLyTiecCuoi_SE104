<Window x:Class="QuanLyTiecCuoi.MVVM.View.MonAn.SuaMonAn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyTiecCuoi.MVVM.View.MonAn"
        mc:Ignorable="d"
        Title="Chỉnh sửa món ăn" Height="350" Width="250"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <Border CornerRadius="20" BorderBrush="#111" BorderThickness="2"  Background="#FFF">

            <StackPanel>
                <StackPanel DockPanel.Dock ="Right" Orientation="Horizontal">
                    <TextBlock Text="Chỉnh sửa món ăn" 
                               TextAlignment="Center" Width="201" Height="14" FontWeight="Bold" Margin="15,0,0,0"/>
                    <Button x:Name="btnClose"
                            Content="✕" 
                            Width="20" 
                            Height="20" 
                            Margin="0,10,0,0"
                            Click="BtnClose_Click"/>
                </StackPanel>
                <Image 
                    x:Name="imgMonAn"
                    Source="{Binding ImagePath}" 
                    Width="200" Height="170" 
                    Stretch="UniformToFill" 
                    Margin="5"
                    MouseLeftButtonDown="ImgMonAn_MouseLeftButtonDown"/>
                <TextBox 
                            Text="{Binding TenMon}"
                            x:Name="txtTenMon"
                            FontWeight="Bold" 
                            FontSize="24" 
                            TextAlignment="Center" 
                            Margin="5,5,5,0"
                            IsReadOnly="True"
                            Background="Transparent"
                            BorderThickness="0"
                            MouseDoubleClick="TxtTenMon_MouseDoubleClick"
                            LostFocus="TxtTenMon_LostFocus"/>
                <TextBox 
                     x:Name="txtDonGia"
                     Text="{Binding DonGia}" 
                     FontWeight="Bold" 
                     FontSize="24" 
                     TextAlignment="Center" 
                     Margin="5,5,5,0"
                     IsReadOnly="True"
                     Background="Transparent"
                     BorderThickness="0"
                     MouseDoubleClick="TxtDonGia_MouseDoubleClick"
                     LostFocus="TxtDonGia_LostFocus"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
