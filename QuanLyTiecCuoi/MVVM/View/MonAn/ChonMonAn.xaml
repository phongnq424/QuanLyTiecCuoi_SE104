<Window x:Class="QuanLyTiecCuoi.MVVM.View.MonAn.ChonMonAn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyTiecCuoi.MVVM.View.MonAn"
        mc:Ignorable="d"
        Title="ChonMonAn" Height="450" Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="2,0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EEE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SearchBoxStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="12" BorderBrush="#AAA" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Background="#F5F5F5" LastChildFill="True">
                <!-- Tiêu đề -->
                <TextBlock Text="Chọn món ăn" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0"/>

                <!-- 3 nút thu nhỏ / phóng to / đóng sát phải -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <Button Style="{StaticResource WindowButtonStyle}" Content="─" Click="Minimize_Click"/>
                    <Button Style="{StaticResource WindowButtonStyle}" Content="□" Click="Maximize_Click"/>
                    <Button Style="{StaticResource WindowButtonStyle}" Content="✕" Click="Close_Click"/>
                </StackPanel>

                <!-- Tìm kiếm -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                    <!-- Tên món ăn -->
                    <Border Style="{StaticResource SearchBoxStyle}" Margin="0,0,10,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtSearchName" Grid.Column="0" Width="150" BorderThickness="0" VerticalContentAlignment="Center" FontStyle="Italic" Foreground="#888" Text="Tên món ăn" GotFocus="SearchBox_GotFocus" LostFocus="SearchBox_LostFocus"/>
                            <Button Grid.Column="1" Style="{StaticResource WindowButtonStyle}" Padding="0" Content="🔍"/>
                        </Grid>
                    </Border>

                    <!-- Đơn giá -->
                    <Border Style="{StaticResource SearchBoxStyle}" Margin="0,0,20,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtSearchPrice" Grid.Column="0" Width="100" BorderThickness="0" VerticalContentAlignment="Center" FontStyle="Italic" Foreground="#888" Text="Đơn giá" GotFocus="SearchBox_GotFocus" LostFocus="SearchBox_LostFocus"/>
                            <Button Grid.Column="1" Style="{StaticResource WindowButtonStyle}" Content="🔍"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </DockPanel>


            <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Danh sách món ăn:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Border BorderBrush="#AAA" BorderThickness="1" CornerRadius="8" Padding="10">
                        <StackPanel>
                            <Border Background="#DDD" CornerRadius="6" Padding="5" HorizontalAlignment="Center" Margin="0,0,0,10">
                                <TextBlock Text="Danh sách món ăn" FontWeight="Bold"/>
                            </Border>

                            <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding DanhSachMonAn}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" ItemWidth="350" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#999" BorderThickness="1" CornerRadius="5" Width="330" Margin="10"
                                                    MouseLeftButtonDown="MonAn_Click">
                                                <Grid Margin="5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Image Source="/Images/coffee.png" Width="100" Height="100" Grid.Column="0" />
                                                    <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding TenMon}" FontWeight="Bold" FontSize="14" />
                                                        <TextBlock Text="{Binding DonGia, StringFormat='Giá: {0:N0} VND'}" FontSize="11" Foreground="Gray" />
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                    <TextBlock Text="Các món ăn đã chọn:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ListBox x:Name="lstSelectedFoods"
                         ItemsSource="{Binding MonAnDaChon}"
                         BorderBrush="#AAA"
                         BorderThickness="1"
                         Height="300"
                         Width="Auto"
                         Margin="0,0,0,10"
                         FontSize="14"
                         Foreground="Black"/>

                    <Button Content="OK"
                        Width="100"
                        Height="30"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0"
                        Click="OkButton_Click"/>

                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
