<Window x:Class="QuanLyTiecCuoi.MVVM.View.Login.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyTiecCuoi.MVVM.View.Login"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        MouseDown="MainWindow_MouseDown"
        x:Name="DangNhapWindow"
        WindowStyle="None"
        Title="LoginWindow" Height="600" Width="960">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding FirstLoadCommand}" 
                                   CommandParameter="{Binding ElementName=DangNhapWindow}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border
                ClipToBounds="True">
                <Image
                    Stretch="UniformToFill"
                    Margin="-100,0,0,0"
                    Grid.Column="0"
                    Source="/Resources/Images/appImage.png"/>
            </Border>

            <Border
                Grid.Column="1"
                Margin="20"
                BorderBrush="Black"
                CornerRadius="30"
                Background="White"
                BorderThickness="1">

                <Border.Effect>
                    <DropShadowEffect 
                        Color="Black" 
                        Direction="600" 
                        ShadowDepth="5" 
                        BlurRadius="10" 
                        Opacity="0.5"/> 
                </Border.Effect>
                <StackPanel
                    Orientation="Vertical"
                    HorizontalAlignment="Center">
                    <Image
                        Width="400"
                        Margin="40,30,40,10"
                        Source="/Resources/Images/Login/Font.png"></Image>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="20"
                        HorizontalAlignment="Center"
                        Style="{StaticResource Header3Style}"
                        Text="Đăng nhập"/>

                    <StackPanel
                        Width="300">
                        
                        <TextBlock
                            Text="Tên đăng nhập"
                            Style="{StaticResource Header5Style}"/>
                        <TextBox
                            Text="{Binding  UserName}"
                            Style="{StaticResource TextBoxStyle1}"></TextBox>


                        <TextBlock
                            Margin="0,20,0,0"
                            Text="Mật khẩu"
                            Style="{StaticResource Header5Style}"/>

                        <Grid Height="auto" Width="auto">


                            <!-- TextBox (hiện mật khẩu) -->
                            <TextBox 
                                Visibility="Collapsed"
                                x:Name="tbPasswordVisible"
                                Style="{StaticResource TextBoxStyle1}"
                                Text="{Binding Password}"/>
                            
                            <PasswordBox
                                x:Name="Passwbox"
                                Style="{StaticResource PasswordBoxStyle}"
                                ></PasswordBox>

                            <ToggleButton
                                Margin="16"
                                Checked="toggleShow_Checked"
                                Unchecked="toggleShow_Unchecked"
                                HorizontalAlignment="Right"
                                x:Name="toggleShow"
                                Style="{StaticResource ToggleButtonPassword}"/>
                        </Grid>

                        <Button
                            Style="{StaticResource ForgotPassWordStyle}"
                            Content="Quên mật khẩu"
                            Command="{Binding ForgotPasswordCommand}"
                            CommandParameter="{Binding ElementName=DangNhapWindow}"></Button>

                        <Button
                            Margin="0,50,0,10"
                            Content="Đăng nhập"
                            Command="{Binding LoginCommand }"
                            Style="{StaticResource LoginButtonStyle}"></Button>


                        <Button
                            Margin="0,10,0,10"
                            Content="Thoát"
                            Click="Button_Click"
                            Style="{StaticResource LoginButtonStyle}">
                        </Button>


                        <TextBlock
                            Visibility="{Binding ErrorMessVisability}"
                            Style="{StaticResource ErrorTextBlockStyle}"
                            Margin="-70,0,-70,0"
                            Text="Tên đăng nhập hoặc mật khẩu không đúng"></TextBlock>

                    </StackPanel>
                </StackPanel>
            </Border>

        </Grid>
    </Border>
</Window>
