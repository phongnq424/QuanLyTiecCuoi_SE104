<Window x:Class="QuanLyTiecCuoi.MVVM.View.DichVu.ChiTietTC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chi Tiết Dịch Vụ"
        Height="380"
        Width="270"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Grid>
        <Border CornerRadius="20" BorderBrush="#111" BorderThickness="2" Background="White" Padding="10">
            <StackPanel>

                <!-- Header -->
                <DockPanel>
                    <TextBlock Text="Chi tiết dịch vụ"
                               FontWeight="Bold"
                               FontSize="16"
                               DockPanel.Dock="Left"
                               VerticalAlignment="Center"
                               Margin="5,0,0,0"/>
                    <Button x:Name="btnClose"
                            Style="{StaticResource ButtonStyle}"
                            Content="✕"
                            Width="20"
                            Height="20"
                            DockPanel.Dock="Right"
                            Click="BtnClose_Click"
                            HorizontalAlignment="Right"/>
                </DockPanel>

                <!-- Image -->
                <Image Source="{Binding HinhAnh}"
                       Width="220" Height="150"
                       Stretch="UniformToFill"
                       Margin="0,10"/>

                <!-- Tên -->
                <TextBlock Text="{Binding TenDichVu}"
                           FontWeight="Bold"
                           FontSize="20"
                           TextAlignment="Center"
                           Margin="0,5"/>

                <!-- Giá -->
                <TextBlock Text="{Binding DonGia, StringFormat={}{0:N0} VND}"
                           FontSize="18"
                           Foreground="DarkGreen"
                           TextAlignment="Center"
                           Margin="0,5"/>

                <!-- Mô tả -->
                <TextBlock Text="{Binding MoTa}"
                           FontSize="14"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
