<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="TextBoxDescribeStyle" TargetType="TextBox">
        <Setter Property="FontSize" Value="18"></Setter>
        <Setter Property="Height" Value="auto"/>
        <Setter Property="Width" Value="200"/>
        <Setter Property="AcceptsReturn" Value="True"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border 
                        x:Name="BorderTBox"
                        BorderBrush="#603127" 
                        BorderThickness="1" 
                        CornerRadius="5"
                        Margin="5"
                        Background="#f4f6ff"
                        Opacity="0.7">
                        <ScrollViewer x:Name="PART_ContentHost"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="BorderTBox" Property="BorderBrush" Value="#603127" />
                            <Setter TargetName="BorderTBox" Property="BorderThickness" Value="2" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="BorderTBox" Property="BorderBrush" Value="#603127" />
                            <Setter TargetName="BorderTBox" Property="BorderThickness" Value="2" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="TextBoxStyle1" TargetType="TextBox">
        <Setter Property="Width" Value="300"/>
        <Setter Property="Height" Value="auto"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Text" Value=""/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border
                        x:Name="BorderTBox"
                        Background="#f9f2e7"
                        Height="{TemplateBinding Height}"
                        Width="{TemplateBinding Width}"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="15">
                        <ScrollViewer Margin="10" x:Name="PART_ContentHost"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="BorderTBox" Property="BorderThickness" Value="2" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="BorderTBox" Property="Background" Value="#FDE6C2"/>
                            <Setter TargetName="BorderTBox" Property="BorderThickness" Value="2" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>