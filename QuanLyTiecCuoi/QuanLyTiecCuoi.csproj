    <Resource Include="resources\images\appImage.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="resources\images\Login\Font.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="resources\images\Login\hideIcon.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
